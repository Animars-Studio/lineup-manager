{
  "name": "server",
  "version": "1.0.0",
  "description": "Apollo server using AWS Lambda",
  "main": "src/index.js",
  "scripts": {
    "analyze": "esbuild --bundle src/index.ts --outdir=dist --metafile=meta.json && esbuild-analyzer meta.json",
    "build": "tsc && cp src/schema.graphql dist/",
    "start": "yarn generate && yarn build && serverless offline",
    "start:dev": "export AM_IS_OFFLINE=true && nodemon",
    "serverless-build": "./scripts/serverless-build.sh",
    "deploy:dev": "npm run serverless-build && sls deploy --stage dev",
    "test": "echo \"Error: no test specified\" && exit 1",
    "generate": "graphql-codegen",
    "drizzle:studio": "yarn drizzle-kit studio --port 3500 --verbose",
    "migrations:run": "drizzle-kit migrate",
    "migrations:run:dev": "drizzle-kit migrate --config drizzle.config.dev.ts",
    "migrations:check": "drizzle-kit check",
    "migrations:up": "drizzle-kit up",
    "migrations:drop": "drizzle-kit drop",
    "migrations:generate": "drizzle-kit generate --name",
    "migrations:generate:custom": "drizzle-kit generate --custom",
    "lint": "eslint ."
  },
  "author": "odiaz.dw@gmail.com",
  "license": "ISC",
  "dependencies": {
    "@apollo/server": "^4.10.4",
    "@as-integrations/aws-lambda": "^3.1.0",
    "@graphql-codegen/cli": "^5.0.2",
    "@graphql-codegen/typescript": "^4.0.7",
    "@graphql-codegen/typescript-operations": "^4.2.1",
    "@graphql-codegen/typescript-resolvers": "^4.1.0",
    "@types/aws-sdk": "^2.7.0",
    "@types/node": "^20.12.13",
    "amazon-cognito-identity-js": "^6.3.12",
    "aws-sdk": "^2.1637.0",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.31.2",
    "graphql": "^16.8.1",
    "postgres": "^3.4.4",
    "serverless-offline": "^13.6.0"
  },
  "devDependencies": {
    "@aws-sdk/client-cognito-identity-provider": "^3.614.0",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.14.1",
    "drizzle-kit": "^0.22.7",
    "env-cmd": "^10.1.0",
    "eslint": "8.47.0",
    "eslint-plugin-deprecation": "^3.0.0",
    "eslint-plugin-no-floating-promise": "^2.0.0",
    "eslint-plugin-promise": "^6.2.0",
    "nodemon": "^3.1.3",
    "serverless-esbuild": "^1.52.1",
    "serverless-plugin-scripts": "^1.0.2",
    "ts-node": "^10.9.2",
    "typescript": "4.9.5"
  }
}
