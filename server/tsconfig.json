{
  "compilerOptions": {
    "lib": [
      "esnext",
      "dom"
    ],
    "target": "ESNext",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "types": [
      "node",
      "graphql-upload"
    ],
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.graphql",
  ],
  "exclude": [
    "node_modules"
  ]
}